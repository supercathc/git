<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.etoak.mapper.UserMapper">
	<sql id="user-columns">
		id,username,password,status
	</sql>
	<insert id="add" parameterType="user">
		insert into user(<include refid="user-columns"></include>) 
		values (#{id},#{username},#{password},#{status}) 
	</insert>
	<resultMap id="userMap" type="user">
		<id column="id" property="id"></id>
		<result column="username" property="username"></result>
		<result column="password" property="password"></result>
		<result column="status" property="status"></result>
	</resultMap>
	<select id="queryPage" resultMap="userMap">
		select <include refid="user-columns"/> from user 
	</select>
	<update id="update" parameterType="map">
		update user  
		<set>
			<if test="username!=null">
				 username=#{username},
			</if>
			<if test="password!=null">
				 password=#{password},
			</if>
			<if test="status!=null">
				 status=#{status},
			</if>
		</set>	
		where id = #{id}
	</update>
	
</mapper>